<h1><%= @user %></h1>

<ul>
  <li>
    <%= link_to "Edit User", [:edit, :admin, @user] %>
  </li>
  <li>
    <%= link_to "Archive User", [:archive, :admin, @user], method: :patch, data: { confirm: "Are you sure you want to archive this user?"} %>
  </li>
</ul>
<h2>Roles</h2>
<% if @user.roles.any? %>
  <ul>
    <% @user.roles.each do |role| %>
      <li><%= role.guild.name %>: <%= role.role.titleize %></li>
    <% end %>
  </ul>
<% else %>
  <p>This user has no roles.</p>
<% end %>
